extends layout

block body  
  div(class='featured')
    div(class='featured_wrap clearfix')
      div(class='page_titles')
        h1 Account
        
  div(class='primary')
    div(class='primary_wrap')
      div(class='content wide')
        div(style='width:400px; margin:auto; padding:30px;', class='box0')
          - if ('undefined' !== typeof errors && errors.length)
            - each error in errors
                div(class='box box3 left')
                  p= error
          - if ('undefined' !== typeof success)
            div(class='box box2 left')
              p Your profile has been updated
          form(action='/panel/account', method='POST', class='commentform', name='form')
            p
              input(type='email', name='email', value=user.email, required, readonly='readonly')
              label(for='email') Email
            p
              input(type='password', name='password')
              label(for='password') Password
            p(class='submit')
              input(type='submit', class='submit', value='Update')
              a(href='/panel/remove', style='margin-left:15px;') Delete your account